<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.evosystems.gerenciador">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gerenciador">
        <activity android:name=".ui.activity.FormularioFuncionarioActivity" />
        <activity android:name=".ui.activity.ListaFuncionariosActivity" />
        <activity android:name=".ui.activity.DetalhesFuncionarioActivity" />
        <activity android:name=".ui.activity.FormularioDepartamentoActivity" />
        <activity
            android:name=".ui.activity.ListaDepartamentosActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>